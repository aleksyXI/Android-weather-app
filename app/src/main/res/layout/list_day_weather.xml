<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/day_week"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:text="gt"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/dayNum"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_toStartOf="@id/weatherPic"
        android:layout_toEndOf="@id/day_week"
        android:text="12312"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/weatherPic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="sssssss"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tempDay"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_toEndOf="@id/weatherPic"
        android:text="22-"
        android:textAlignment="viewEnd"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/symb"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_toEndOf="@id/tempDay"
        android:text="~"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tempNight"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_toEndOf="@id/symb"
        android:text="2"
        android:textAlignment="viewStart"
        android:textSize="14sp" />
</RelativeLayout>